{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs", // CHANGED: Allows extensionless imports
    "moduleResolution": "node", // ADDED: Ensures Node-style resolution
    "target": "ES2021",
    "types": ["node"],
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
